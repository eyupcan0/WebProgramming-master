@model AspWebProgram.Models.RegisterDoktorModel

@{
    ViewData["Title"] = "Doktor Kayıt";
}

<h2>Doktor Kayıt Formu</h2>

<form method="post" asp-controller="Doktor" asp-action="Register">
    <div class="form-group">
        <label asp-for="DoktorAd">Adı:</label>
        <input asp-for="DoktorAd" class="form-control" />
        <span asp-validation-for="DoktorAd" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoktorSoyad">Soyadı:</label>
        <input asp-for="DoktorSoyad" class="form-control" />
        <span asp-validation-for="DoktorSoyad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoktorTc">TC Kimlik Numarası:</label>
        <input asp-for="DoktorTc" class="form-control" />
        <span asp-validation-for="DoktorTc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoktorCinsiyet">Cinsiyet:</label>
        <select asp-for="DoktorCinsiyet" class="form-control">
            <option value="Erkek">Erkek</option>
            <option value="Kadın">Kadın</option>
        </select>
        <span asp-validation-for="DoktorCinsiyet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Şifre:</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Şifre Tekrarı:</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoktorBrans">Branşı:</label>
        <input asp-for="DoktorBrans" class="form-control" />
        <span asp-validation-for="DoktorBrans" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="SelectedAnaBilimId">Ana Bilim Seçin:</label>
        <select class="form-control" id="SelectedAnaBilimId" asp-for="SelectedAnaBilimId" name="SelectedAnaBilimId">
            <option value="">Seçiniz</option>
            <option value="Temel Tıp">Temel Tıp</option>
            <option value="Dahili Tıp">Dahili Tıp</option>
            <option value="Cerrahi Tıp">Cerrahi Tıp</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SelectedPoliklinikId">Poliklinik Seçin:</label>
        <select class="form-control" id="SelectedPoliklinikId" asp-for="SelectedPoliklinikId" name="SelectedPoliklinikId">
            <option value="">Seçiniz</option>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

<script>
    $(function () {
        $("#SelectedAnaBilimId").change(function () {
            var selectedAnaBilim = $(this).val();
            var poliklinikDropdown = $("#SelectedPoliklinikId");

            // Poliklinikleri sıfırla
            poliklinikDropdown.empty();

            if (selectedAnaBilim === "Temel Tıp") { // Temel Tıp seçildiğinde
                poliklinikDropdown.append($('<option>', {
                    value: "Anatomi",
                    text: "Anatomi"
                }));
                poliklinikDropdown.append($('<option>', {
                    value: "Fizyoloji",
                    text: "Fizyoloji"
                }));
                poliklinikDropdown.append($('<option>', {
                    value: "Histoloji",
                    text: "Histoloji"
                }));
            } else if (selectedAnaBilim === "Dahili Tıp") { // Dahili Tıp seçildiğinde
                poliklinikDropdown.append($('<option>', {
                    value: "Acil Tıp",
                    text: "Acil Tıp"
                }));
                poliklinikDropdown.append($('<option>', {
                    value: "Kardiyoloji",
                    text: "Kardiyoloji"
                }));
                poliklinikDropdown.append($('<option>', {
                    value: "Radyoloji",
                    text: "Radyoloji"
                }));
            } else if (selectedAnaBilim === "Cerrahi Tıp") { // Cerrahi Tıp seçildiğinde
                poliklinikDropdown.append($('<option>', {
                    value: "Beyin ve Sinir Cerrahisi",
                    text: "Beyin ve Sinir Cerrahisi"
                }));
            }
        });
    });
</script>