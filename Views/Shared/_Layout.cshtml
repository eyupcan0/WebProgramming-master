@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
    bool isLoggedIn = !string.IsNullOrEmpty(username);
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspWebProgram</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspWebProgram.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AspWebProgram</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (isLoggedIn)
                        {
                            if (userRole == "Hasta")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hasta Testing</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@_localization.GetKey("Ana Sayfa")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Randevu" asp-action="IndexRandevu">@_localization.GetKey("Randevu Listele")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Randevu" asp-action="RandevuOlustur">@_localization.GetKey("Randevu Oluştur")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Doktor" asp-action="Register">@_localization.GetKey("Doktor Ekle")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Doktor" asp-action="Index">@_localization.GetKey("Doktorları Listele")</a>
                        </li>
                        @if (!isLoggedIn)
                        {
                         <li class="nav-item">
                         <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">@_localization.GetKey("Kayıt Ol")</a>
                        </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Hasta" asp-action="Index">@_localization.GetKey("Hastaları Listele")</a>
                        </li>
                        <li>
                            <div class="dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">Language</button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="dropdown-item"><i class="flag-icon flag-icon-gb"></i>English</a>

                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="dropdown-item">
                                            <i class="flag-icon flag-icon-gb"></i>Türkçe
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">@_localization.GetKey("Hoşgeldiniz"): @username</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">@_localization.GetKey("Oturumu Kapat")</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">@_localization.GetKey("Giriş Yap")</a>
                            </li>
                        }
                            </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AspWebProgram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
            @if (!string.IsNullOrEmpty(username))
            {
                <li><a href="#">@_localization.GetKey("Hoşgeldiniz"): @username</a></li>
            }
        </ul>
    </div>
</body>

</html>
@RenderSection("Scripts", required: false)
<script>
    $(document).ready(function () {
        // Dil seçimi için event handler tanımla
        $('.dropdown-menu .dropdown-item').on('click', function () {
            var selectedLanguage = $(this).text();
            // Buton metnini seçilen dil ile güncelle
            $('.dropdown-toggle').text(selectedLanguage);
            // Seçimi localStorage'a kaydet
            localStorage.setItem('selectedLanguage', selectedLanguage);
        });

        // Sayfa yüklendiğinde, daha önce seçilmiş dili kontrol et
        var savedLanguage = localStorage.getItem('selectedLanguage');
        if (savedLanguage) {
            // Kaydedilmiş dil varsa buton metnini güncelle
            $('.dropdown-toggle').text(savedLanguage);
        }
    });
</script>